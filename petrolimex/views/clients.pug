extends ./layouts/common

block style
    include ../css/common.css
block content

    button#start.btn.btn-success.mb-3(type='button', data-toggle='modal', data-target='#modal-create', style='float:right;') 
        h5 Start creating client

    button#update.btn.btn-success.mr-2.mb-3(type='button', data-toggle='modal', data-target='#modal-update', style='float:right;') 
        h5 Update client
    

    #modal-create.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog.modal-dialog-centered.modal-dialog-scrollable(style='max-width: 800px;min-width: 600px;')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Modal title
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    table.table.table-borderless
                        tr
                            td Name
                            td
                                input.form-control(type="text", name ="name")
                        tr
                            td Code
                            td
                                input.form-control(type="text", name ="code", aria-describedby="notification-code", required)
                                #notification-code.invalid-feedback Code đã trùng.
                        tr
                            td taxId
                            td
                                input.form-control(type="text", name ="taxId", aria-describedby="notification-taxId", required)
                                #notification-taxId.invalid-feedback taxId đã trùng.
                        tr
                            td Address
                            td
                                input.form-control(type="text", name ="address")
                        tr
                            td Max payment limit
                            td
                                input.form-control(type="number", name ="max_payment_limit", step="100000000")
                        tr
                            td Username
                            td
                                input.form-control(type="text", name ="username", aria-describedby="notification-user", required)
                                #notification-user.invalid-feedback Username đã trùng.
                        tr
                            td Password
                            td
                                input.form-control(type="password", name ="password", required)
                        tr
                            td Permisssion
                            td.form-group
                                select.form-control(name='roleId')
                .modal-footer
                    button.cancel.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                    button#create.btn.btn-success(type='button', data-dismiss='modal') Create

    #modal-update.modal.fade(tabindex='-1', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog.modal-dialog-centered.modal-dialog-scrollable(style='max-width: 800px;min-width: 600px;')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Modal title
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    div(style="display: none;")
                        input.form-control(type="text", name ="clientId", readonly, value='')
                    table.table.table-borderless
                        tr
                            td Name
                            td
                                input.form-control(type="text", name ="name")
                        tr
                            td Code
                            td
                                input.form-control(type="text", name ="code", readonly)
                        tr
                            td taxId
                            td
                                input.form-control(type="text", name ="taxId", aria-describedby="notification-taxId", required)
                                #notification-taxId.invalid-feedback taxId đã trùng.
                        tr
                            td Address
                            td
                                input.form-control(type="text", name ="address")
                        tr
                            td Max payment limit
                            td
                                input.form-control(type="number", name ="max_payment_limit", step="100000000")
                                    

                .modal-footer
                    button.cancel.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                    button#btn-update.btn.btn-success(type='button', data-dismiss='modal') Update

                    

    table#content.table.table-striped.table-bordered.table-light
        tr
            th Name
            th Code
            th Address
            th TaxId
            th Max payment limit
            th DebtCeiling remain
            th(style="width: 70px;") Select

block body_continue
    script(src="/views/js/clients.js").
                    
